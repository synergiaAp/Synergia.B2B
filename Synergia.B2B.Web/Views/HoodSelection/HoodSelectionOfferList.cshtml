@model HoodSelectionOfferListViewModel
@Scripts.Render("~/bundles/hoodSelection/hoodSelectionOfferList")

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header card-header-text" data-background-color="blueSynergia">
                <h4 class="card-title">Lista doborów</h4>
            </div>
            <div class="card-content">
                <div class="toolbar">
                    <div class="row">
                        <div class="col-md-8"></div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.DropDownList("HoodOfferStatusFilter", Model.Statuses, "Wszystkie oferty", new { @class = "selectpicker", data_style = "select-with-transition" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <a id="btnAddNewHoodOffer" class="btn btn-info">Dodaj dobór</a>
                        </div>
                    </div>
                </div>

                <div class="material-datatables">
                    <table id="hoodOffersTable" class="table table-striped table-no-bordered table-hover dataTable" cellspacing="0" style="width:100%; display:none">
                        <thead>
                            <tr>
                                <th>Nr oferty</th>
                                <th class="nowrap">Data dodania</th>
                                <th>Miasto</th>
                                <th>Adres</th>
                                <th>Obiekt</th>
                                <th>Region</th>
                                <th>Wartość</th>
                                <th>Status</th>
                                <th>Komentarz</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>