@model HoodSelectionOfferDetailsHoodListViewModel
@Scripts.Render("~/bundles/hoodSelection/_HoodSelectionOfferDetailsHoodList")


    <div class="row">
        <div class="col-md-2">
            <div class="form-group label-static">
                @Html.LabelFor(model => model.AdditionalAccessoryNawiewnikiType, new { @class = "control-label" })
                @Html.DropDownListFor(x => x.AdditionalAccessoryNawiewnikiType, Model.AdditionalAccessoryNawiewnikiTypeList, "Dodaj nawiewnik", new { @class = "selectpicker", data_style = "select-with-transition" })
            </div>
        </div>
        <div class="col-md-1">
            <a id="btnAddVentilatorAccessory" class="btn btn-sm btn-info"><i class="material-icons">add</i></a>
        </div>
        <div class="col-md-2">
            <div class="form-group label-static">
                @Html.LabelFor(model => model.AdditionalAccessorySmokiType, new { @class = "control-label" })
                @Html.DropDownListFor(x => x.AdditionalAccessorySmokiType, Model.AdditionalAccessorySmokiTypeList, "Dodaj Smoki", new { @class = "selectpicker", data_style = "select-with-transition" })
            </div>
        </div>
        <div class="col-md-1">
            <a id="btnAddSmokiAccessory" class="btn btn-sm btn-info"><i class="material-icons">add</i></a>
        </div>
        <div class="col-md-2 col-md-offset-4" style="padding-bottom:10px;">
            <a id="btnAddNewHood" class="btn btn-info">Dodaj okap</a>
        </div>
    </div>
<div class="material-datatables">
    <table id="hoodOfferElementsTable" class="table table-striped table-no-bordered table-hover dataTable" cellspacing="0" style="width:100%; display:none">
        <thead>
            <tr>
                <th>LP</th>
                <th></th>
                <th>Dobrany okap</th>
                <th>Cena jedn.</th>
                <th>Ilość</th>
                <th>Wartość</th>
                <th class="nowrap">Cena katalogowa</th>
                <th class="nowrap">Data dodania</th>
                @*<th class="nowrap">Data modyfikacji</th>*@
                <th></th>
            </tr>
        </thead>
    </table>
</div>