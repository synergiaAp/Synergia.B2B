@using Synergia.B2B.Web.Models
@model HoodSelectionHoodPartsPriceListViewModel
@Scripts.Render("~/bundles/hoodSelection/hoodSelectionHoodPartsPriceList")
@{ViewBag.Title = "Cennik elementów do okapów";}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header card-header-text" data-background-color="blueSynergia">
                <h4 class="card-title">Cennik elementów</h4>
            </div>
            <div class="card-content">
                <div class="toolbar">
                    <div class="row">
                        @*<div class="col-md-8"></div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    @Html.DropDownList("OfferStatusFilter", Model.Statuses, "Wszystkie oferty", new { @class = "selectpicker", data_style = "select-with-transition" })
                                </div>
                            </div>*@
                        @*<div class="col-md-2 col-md-offset-10" style="padding-bottom:10px;">
                                <a data-toggle="modal" data-target="#modalHoodPartsPriceList" class="btn btn-info">Dodaj element</a>
                            </div>*@
                    </div>
                </div>

                <div class="material-datatables">
                    <table id="hoodPartsPriceListTable" class="table table-striped table-no-bordered table-hover dataTable" cellspacing="0" style="width:100%; display:none">
                        <thead>
                            <tr>
                                <th>Nazwa elementu</th>
                                <th>Cena netto</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalAddHoodPartsPriceList" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        @using (Html.BeginForm("AddHoodPartsPriceList", "HoodSelection", FormMethod.Post, new { id = "formAddAddHoodPartsPriceList" }))
        {

            <!-- Modal content-->
            <div class="modal-content">

                @*<div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <i class="material-icons">clear</i>
                        </button>
                        <h4 class="modal-title">&nbsp;</h4>
                    </div>*@
                <div class="modal-body">

                    <div class="card">
                        <div class="card-header card-header-icon" data-background-color="rose">
                            <i class="material-icons">perm_identity</i>
                        </div>
                        <div class="card-content">
                            <h4 class="card-title">
                                Cena elementu
                            </h4>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", disabled = "true" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.PriceNet, new { @class = "required control-label" })
                                        @Html.TextBoxFor(model => model.PriceNet, new { @class = "form-control" })
                                    </div>
                                </div>
                                @Html.HiddenFor(m => m.Id)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
                    <button type="button" onclick="hoodSelectionHoodPartsPriceList.save();" class="btn btn-success">Zapisz cenę</button>
                </div>
            </div>
        }
    </div>
</div>

