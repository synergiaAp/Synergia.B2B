@model HoodFinalOfferListViewModel
@Scripts.Render("~/bundles/hoodSelection/HoodFinalOfferList")

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header card-header-text" data-background-color="blueSynergia">
                <h4 class="card-title">Lista ofert okapów</h4>
            </div>
            <div class="card-content">
                <div class="toolbar">
                    <div class="row">
                        <div class="col-md-8"></div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.DropDownList("HoodFinalOfferStatusFilter", Model.Statuses, "Wszystkie oferty", new { @class = "selectpicker", data_style = "select-with-transition" })
                            </div>
                        </div>
                        @*<div class="col-md-2" style="padding-bottom:10px;">
                            <button type="button" class="btn btn-info" data-toggle="modal" id="buttonAddOffer">Dodaj ofertę</button>
                        </div>*@
                    </div>
                </div>

                <div class="material-datatables">
                    <table id="hoodFinalOfferListTable" class="table table-striped table-no-bordered table-hover dataTable" 
                           cellspacing="0" style="width:100%; display:none">
                        <thead>
                            <tr>
                                <th>Nr oferty</th>
                                <th>Data</th>
                                <th>Klient</th>
                                <th>Obiekt</th>
                                <th>Region</th>
                                <th>Wartość katalogowa</th>
                                <th>Wartość po rabacie</th>
                                <th>Wartość końcowa</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_HoodFinalOfferDetails", new HoodFinalOfferDetailsViewModel())