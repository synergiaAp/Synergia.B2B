@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("SignOut", "Login", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @*@Html.AntiForgeryToken()*@

        <ul class="nav navbar-nav navbar-right">
            <li>
                @*@Html.Label("Użytkownik: " + User.Identity.GetUserName())*@
                <a>Użytkownik: @User.Identity.GetUserName()</a>

            </li>
            <li><a class="logout" href="javascript:document.getElementById('logoutForm').submit()">Wyloguj</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Zaloguj", "Index", "Login", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}

